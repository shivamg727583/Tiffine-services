<%- include('./partials/header') %>
<a href="/" class="inline-block px-6 py-2 bg-blue-600 text-white rounded-full mt-24"><span class="hidden md:inline-block">Back to Search</span> <span><i class="ri-arrow-left-line md:hidden"></i></span></a>

  <div class="container mx-auto px-4 min-h-screen py-3">
<div class="profile md:ml-24 flex justify-between items-center">
    <div class="details">
        <h1 class="text-4xl font-bold mt-4 mb-2"><%= vendor.business_name %></h1>
        <h2 class="text-2xl font-semibold mt-2 mb-4">By : <%= vendor.owner_name %></h2>
    
        <p><strong>Pincode:</strong> <%= vendor.pincode %></p>
        <p><strong>Contact Details:</strong></p>
        <ul class="mb-4">
          <li><strong>Phone:</strong> <%= vendor.phone %></li>
          <li><strong>Email:</strong> <%= vendor.email %></li>
        </ul>
        
        <p><strong>Address:</strong> <%= vendor.address %></p>
    </div>
    <div class="propic w-48 h-48 overflow-hidden rounded-full border-gray-100 bg-white p-1 border-2">
        <img src="data:image/jpeg;base64,<%= vendor.profilePicture %>" alt="profilePic" class="w-full h-full rounded-full object-cover">

    </div>
   
</div>
    
    <!-- Display the list of foods offered by the vendor -->
    <div class="mt-6">
      <h3 class="text-2xl font-semibold mb-4">Foods Offered:</h3>
      <% if (vendor.foodItems && vendor.foodItems.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% vendor.foodItems.forEach(food => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src="data:image/jpeg;base64,<%= food.food_image %>" alt="Meal" class="w-full h-48 object-cover">
                <div class="p-4">
                  <h3 class="text-lg font-semibold text-gray-800 mb-2">
                    <%= food.food_name %>
                  </h3>
                  <p class="text-sm text-gray-600 mb-2">
                    <%= food. food_description %>
                  </p>
                  <div class="flex items-center justify-between">
                    <p class="text-lg font-bold text-orange-500">â‚¹<%= food.price %>
                    </p>
                    <a href="/users/addToCart/<%= food._id  %>"> <button
                        class="px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-400 focus:outline-none focus:ring-2 focus:ring-orange-500">Add
                        to Cart</button>
                    </a>
                  </div>
                </div>
              </div>
  
          <% }); %>
        </div>
      <% } else { %>
        <p>No foods available for this vendor.</p>
      <% } %>
    </div>

    <!-- Back to Search button -->
  </div>
  
<%- include('./partials/footer') %>
