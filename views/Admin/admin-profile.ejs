<%- include('../partials/header')  %>

    <div class="container mx-auto px-4 py-8 mt-16 relative">
        <a href="/admin" class="p-1 bg-gray-200 rounded-full "> <i class="ri-arrow-left-line"></i></a>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-md mx-auto">
            <div class="bg-cover bg-center h-40 p-4 bg-gray-800" style="background-image: url('/path/to/cover-image.jpg');">
                <div class="flex justify-end">
                    <button class="text-white bg-gray-900 hover:bg-gray-800 rounded-full px-4 py-2">Edit Profile</button>
                </div>
            </div>
            <div class="border-b px-4 pb-6">
                <div class="text-center my-4">
                    <h2 class="text-xl font-semibold mt-2 text-gray-800"><%= admin.name %></h2>
                    <p class="text-gray-600"><%= admin.email %></p>
                </div>
                <div class="mt-6 flex flex-col items-center">
                    <div class="flex w-full justify-between items-center my-2">
                        <span class="text-gray-600">Role:</span>
                        <span class="font-medium text-gray-900">Admin</span>
                    </div>
                    <div class="flex w-full justify-between items-center my-2">
                        <span class="text-gray-600">Phone:</span>
                        <span class="font-medium text-gray-900"><%= admin.mobile %></span>
                    </div>
                    <div class="flex w-full justify-between items-center my-2">
                        <span class="text-gray-600">Joined:</span>
                        <span class="font-medium text-gray-900"><%= new Date(admin.created_at).toLocaleDateString() %></span>
                    </div>
                </div>
            </div>
            <div class="px-4 py-4">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">About Me</h3>
                <p class="text-gray-700 leading-relaxed"><%= admin.about %></p>
            </div>
            <div class="px-4 py-4 border-t flex justify-end">
                <a href="/" class="text-white bg-red-500 hover:bg-red-600 rounded-full px-4 py-2" onclick="return confirm('Are you sure you want to log out?'); ">Log Out</a>
            </div>
        </div>
    </div>
</body>
</html>




