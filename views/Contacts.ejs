<%- include('./partials/header')  %>

<!-- Main Content -->
<main class="container mx-auto p-4 mt-20">
  <h1 class="text-3xl font-bold text-center text-orange-500 mb-8">Contact Us</h1>

  <div class="flex flex-col md:flex-row gap-8">

    <!-- Contact Form -->
    <div class="w-full md:w-1/2 bg-white p-8 shadow-lg rounded-lg">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Get in Touch</h2>
      <form id="contactForm" class="space-y-4">
        <div>
          <label for="name" class="block text-gray-700 font-medium">Name</label>
          <input type="text" name="name" id="name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
        </div>
        <div>
          <label for="email" class="block text-gray-700 font-medium">Email</label>
          <input type="email" name="email" id="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
        </div>
        <div>
          <label for="message" class="block text-gray-700 font-medium">Message</label>
          <textarea name="message" id="message" rows="5" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"></textarea>
        </div>
        <button type="submit" class="w-full bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded-lg">Send Message</button>
      </form>
      <div id="responseMessage" class="mt-4"></div>
    </div>

    <!-- Contact Information -->
    <div class="w-full md:w-1/2 bg-white p-8 shadow-lg rounded-lg">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Contact Information</h2>
      <p class="text-gray-700 mb-4">If you have any questions or need more information, feel free to contact us via email or phone. You can also visit us at our office during business hours.</p>
      <div class="space-y-4">
        <div class="flex items-center">
          <i class="ri-map-pin-line text-2xl text-orange-500 mr-3"></i>
          <p class="text-gray-700">123 Tiffine service , bhopal, M.P , 462022</p>
        </div>
        <div class="flex items-center">
          <i class="ri-phone-line text-2xl text-orange-500 mr-3"></i>
          <p class="text-gray-700">+91 123456780</p>
        </div>
        <div class="flex items-center">
          <i class="ri-mail-line text-2xl text-orange-500 mr-3"></i>
          <p class="text-gray-700">contact@tiffinservice.com</p>
        </div>
      </div>
    </div>

  </div>
</main>

<footer class="bg-white mt-12 p-4">
  <div class="container mx-auto text-center text-gray-600">
    &copy; 2024 Tiffin Service. All rights reserved.
  </div>
</footer>

<script src="/js/script.js"></script>
<script type="text/javascript" src="https://cdn.emailjs.com/dist/email.min.js"></script>
<script type="text/javascript">
  (function() {
      emailjs.init('9HrIbS3GSUuiqoHsc');  // Replace with your actual EmailJS User ID
  })();

  // JavaScript for handling form submission and sending email
  document.getElementById('contactForm').addEventListener('submit', function(event) {
      event.preventDefault(); // Prevent default form submission

      const formData = {
        from_name: document.getElementById('name').value,   // This will replace {{from_name}} in the email template
        to_name: 'Tiffin Service Team',      
        user_email:document.getElementById('email').value,               // This will replace {{to_name}} in the email template
        message: document.getElementById('message').value   // This will replace {{message}} in the email template
    };
      // Sending email using EmailJS
      emailjs.send('service_1yezmik', 'template_mhx3reh', formData)  // Replace with your EmailJS service ID and template ID
          .then(function(response) {
              console.log('SUCCESS!', response.status, response.text);
              document.getElementById('responseMessage').innerHTML = '<p class="text-green-500">Message sent successfully!</p>';
              document.getElementById('contactForm').reset();  // Clear the form after successful submission
            
            
          }, function(error) {
              console.log('FAILED...', error);
              document.getElementById('responseMessage').innerHTML = '<p class="text-red-500">Failed to send message. Please try again later.</p>';

          });
          setTimeout(()=>{ document.getElementById('responseMessage').innerHTML = '' }, 5000);
  });
</script>

</body>
</html>
