



<%- include('../partials/header') %>


    <div class="container mx-auto mt-20">
        <div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-3xl font-bold mb-6 text-center">Edit Profile</h2>

            <!-- Edit Vendor Profile Form -->
            <form action="/vendors/profile/edit" method="POST" enctype="multipart/form-data" class="space-y-6 w-full">
                <!-- Profile Picture -->
                <div class="text-center ">
                    <label for="profilePicture" class="block text-gray-700 font-bold mb-2 relative ">Profile Picture:
                    <img src="data:image/jpeg;base64,<%= vendor.profilePicture %>" alt="" class="h-32 w-32 rounded-full mx-auto cursor-pointer mb-4 object-cover bg-gray-200">  
                    <i class="ri-add-fill text-zinc-200 absolute bottom-1 right-[43%] leading-tight font-light text-3xl"></i>
                  </label>
                    <input type="file" id="profilePicture" name="profilePicture" class="block hidden w-full text-sm text-gray-500 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none">
                    
                    <p class="text-gray-500 text-xs mt-1">Allowed file formats: .jpg, .jpeg, .png</p>
                </div>

                <!-- Business Information -->
                <div>
                    <label for="business_name" class="block text-gray-700 font-bold mb-2">Business Name:</label>
                    <input type="text" id="business_name" name="business_name" value="<%= vendor.business_name %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <div>
                    <label for="owner_name" class="block text-gray-700 font-bold mb-2">Owner Name:</label>
                    <input type="text" id="owner_name" name="owner_name" value="<%= vendor.owner_name %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <div>
                    <label for="email" class="block text-gray-700 font-bold mb-2">Email:</label>
                    <input type="email" id="email" name="email" value="<%= vendor.email %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <div>
                    <label for="phone" class="block text-gray-700 font-bold mb-2">Phone:</label>
                    <input type="text" id="phone" name="phone" value="<%= vendor.phone %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <div>
                    <label for="address" class="block text-gray-700 font-bold mb-2">Address:</label>
                    <input type="text" id="address" name="address" value="<%= vendor.address %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="city" class="block text-gray-700 font-bold mb-2">City:</label>
                        <input type="text" id="city" name="city" value="<%= vendor.city %>" required
                            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                    </div>

                    <div>
                        <label for="state" class="block text-gray-700 font-bold mb-2">State:</label>
                        <input type="text" id="state" name="state" value="<%= vendor.state %>" required
                            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                    </div>
                </div>

                <div>
                    <label for="pincode" class="block text-gray-700 font-bold mb-2">Pincode:</label>
                    <input type="text" id="pincode" name="pincode" value="<%= vendor.pincode %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <div>
                    <label for="gst_number" class="block text-gray-700 font-bold mb-2">GST Number:</label>
                    <input type="text" id="gst_number" name="gst_number" value="<%= vendor.gst_number %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>
                <div>
                  <label for="cuisine" class="block text-gray-700 font-bold mb-2">Cuisine Type *</label>
                  <input type="text" id="cuisine" name="cuisine" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500" required value="<%= vendor.cuisine %>">
                </div>

                <div>
                    <label for="experience" class="block text-gray-700 font-bold mb-2">Experience (in years):</label>
                    <input type="number" id="experience" name="experience" value="<%= vendor.experience %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <div>
                    <label for="business_license" class="block text-gray-700 font-bold mb-2">Business License:</label>
                    <input type="text" id="business_license" name="business_license" value="<%= vendor.business_license %>" required
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <div class="mt-6 text-center">
                    <button type="submit"
                        class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>




<%- include('../partials/footer')  %>
