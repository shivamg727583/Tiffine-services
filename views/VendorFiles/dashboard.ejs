<%- include('../partials/header') %>

  
        <!-- Sidebar -->
        <div class="flex min-h-screen mt-16">
            <aside class="w-64 bg-blue-900 text-white flex flex-col">
                <div class="text-center py-8 flex flex-col items-center ">

                    <h1 class="text-2xl font-semibold mb-6"><span class="font-bold"> Dashboard</h1>
                  <div class="pic w-28 h-28  rounded-full border-2 border-white bg-red-600 overflow-hidden">
                    <img src="data:image/jpeg;base64,<%= vendor.profilePicture%> " alt="Logo" class="w-full h-full object-cover">
                  </div>
                    <h1 class="text-2xl font-semibold"><span class="font-bold">   <%= vendor.owner_name %> </span></h1>
                </div>
                <nav class="mt-4" id="slide-nav">
                    <ul>
                        <a href="/vendors/dashboard">
                            <li class="py-2 px-6 hover:bg-blue-700">Dashboard</li>
                        </a>
                        <a href="/vendors/dashboard/manageFoods">
                            <li class="py-2 px-6 hover:bg-blue-700">Manage Foods</li>
                        </a>
                        <a href="/vendors/addFood">
                            <li class="py-2 px-6 hover:bg-blue-700">Add Foods</li>
                        </a>
                        <a href="/vendors//tiffin-schedule/weekly">
                            <li class="py-2 px-6 hover:bg-blue-700">Tiffin Schedule</li>
                        </a>
                        <a href="/vendors/profile">
                            <li class="py-2 px-6 hover:bg-blue-700">Profile</li>
                        </a>
                    </ul>
                </nav>
            </aside>

            <!-- Main Content -->
            <div class="flex-1 p-10">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <!-- Dashboard Cards -->
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <h2 class="text-lg font-bold mb-4">Total Foods</h2>
                        <p class="text-gray-600">
                            <%= vendor.foodItems.length %>
                        </p>
                    </div>
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <h2 class="text-lg font-bold mb-4">Scheduled Tiffins</h2>
                        <p class="text-gray-600">10</p>
                    </div>
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <h2 class="text-lg font-bold mb-4">Total Orders</h2>
                        <p class="text-gray-600">3</p>
                    </div>
                </div>

                <!-- Manage Foods Section -->
                <div class="mt-10">
                    <h2 class="text-2xl font-bold mb-6">Manage Foods</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">


                        <% vendor.foodItems.forEach((food)=>{ %>
                            <div class="bg-white p-4 rounded-lg shadow-lg hover:scale-95 transition-all ease-in-out">
                                <div
                                    class="img w-full bg-red-600 flex items-center justfy-center w-100 h-[10rem] overflow-hidden rounded-lg">
                                    <img src="data:image/jpeg;base64,<%= food.food_image %>" alt="Food Image"
                                        class="w-full h-full object-cover ">
                                </div>
                                <h3 class="text-lg font-bold">
                                    <%= food.food_name %>
                                </h3>
                                <p class="text-gray-600">
                                    <%= food.food_description %>
                                </p>
                                <h5 class="text-md font-medium"> â‚¹ <%= food.price %>
                                </h5>
                                <h4 class="text-md capitalize">cuisine_type : <%= food.cuisine_type %>
                                </h4>

                                <a href="/vendors/food/edit/<%= food._id  %>"> <button
                                        class="mt-4 bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">Edit</button></a>
                                <a href="/vendors/food/delete/<%= food._id  %>"> <button
                                        class="mt-4 bg-red-600 text-white py-2 px-4 rounded hover:bg-red-700">Delete</button></a>
                            </div>



                            <% })%>



                                <!-- Repeat similar blocks for other food items -->
                    </div>
                </div>
            </div>
        </div>
        <script src="/js/script.js"></script>
    </body>

    </html>