<%- include('../partials/header')  %>

<div class="bg-gradient-to-r from-blue-500 to-indigo-500 min-h-screen mt-16 flex items-center justify-center">
  <div class="max-w-2xl w-full bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="flex items-center justify-center py-6 bg-blue-600">
      <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-white">
        <img src="data:image/jpeg;base64,<%= user.profile_pic  || 'default-profile.png' %>" alt="Profile Picture" class="w-full h-full object-cover">
      </div>
    </div>
    <div class="text-center p-6">
      <h2 class="text-3xl capitalize font-semibold text-gray-800"><%= user.first_name %> <%= user.middle_name %> <%= user.last_name %></h2>
      <p class="text-gray-600"><%= user.email %></p>
      <div class="mt-4 flex justify-center">
        <span class="text-sm font-medium text-gray-600 mr-2">Member since:</span>
        <span class="text-sm font-medium text-gray-800"><%= user.createdAt.toDateString() %></span>
      </div>
      <div class="mt-6">
        <a href="/users/profile/update/<%= user._id  %>" class="inline-block bg-indigo-500 text-white px-4 py-2 rounded-lg hover:bg-indigo-600 transition duration-300">Edit Profile</a>
        <a href="#" class="inline-block bg-gray-100 text-indigo-500 px-4 py-2 rounded-lg hover:bg-gray-200 transition duration-300 ml-2">My Orders</a>
      </div>
    </div>
    <div class="p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Contact Information</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <p class="text-gray-600"><strong>Phone:</strong> <%= user.phone1 || 'N/A' %></p>
          <p class="text-gray-600"><strong>Phone:</strong> <%= user.phone2 || 'N/A' %></p>

        </div>
        <div>
          <p class="text-gray-600"><strong>Address:</strong> <%= user.house_number && user.house_number %> <%= user.street && user.street %> <%= user.area %> <%= user.colony  %> <%= user.landmark %> <%= user.city %> , <strong><%= user.state %></strong>, <%= user.pincode %></p>
        </div>
      </div>
    </div>
    <div class="p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Personal Details</h3>
      <p class="text-gray-600"><strong>About Me:</strong> <%= user.bio || 'Tell us something about yourself...' %></p>
    </div>
  </div>
</div>


<%- include('../partials/footer')  %>